# Production Environment for Docker Compose
DATABASE_URL=postgresql://spaceko_user:spaceko_password_2025@spaceko-db:5432/spaceko_prod
NODE_ENV=production
PORT=5000

# Security secrets (CHANGE THESE IN REAL PRODUCTION)
JWT_SECRET=docker-production-jwt-secret-12345678901234567890123456789012
SESSION_SECRET=docker-production-session-secret-12345678901234567890123456789012

# Database SSL mode for Docker
DB_SSL_MODE=disable
DB_CONNECTION_TIMEOUT=10000
DB_MAX_CONNECTIONS=20

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# CORS
ALLOWED_ORIGINS=http://localhost:5000,http://localhost

# Force HTTPS (disabled for local Docker testing)
FORCE_HTTPS=false

# Health check
HEALTH_CHECK_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
